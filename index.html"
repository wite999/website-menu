    <main>
        <div class="container">
            <div class="content">
                <h1>歡迎來到我們的網站</h1>
                <p>這是一個現代化的響應式企業網站選單示例，具備完整的無障礙支援與動畫效果。</p>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const nav = document.querySelector('nav');
            const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
            const menu = document.querySelector('.menu');
            const menuItems = document.querySelectorAll('.menu-item');

            // 處理滾動效果
            let lastScroll = 0;
            window.addEventListener('scroll', () => {
                const currentScroll = window.pageYOffset;
                if (currentScroll > lastScroll && currentScroll > 100) {
                    nav.classList.add('scrolled');
                } else {
                    nav.classList.remove('scrolled');
                }
                lastScroll = currentScroll;
            });

            // 處理選單開關
            function toggleMenu() {
                const isExpanded = mobileMenuBtn.getAttribute('aria-expanded') === 'true';
                mobileMenuBtn.setAttribute('aria-expanded', !isExpanded);
                mobileMenuBtn.classList.toggle('active');
                menu.classList.toggle('active');
            }

            // 處理子選單
            function handleMenuItemClick(e) {
                if (window.innerWidth <= 768) {
                    const menuItem = e.currentTarget;
                    const menuLink = menuItem.querySelector('.menu-link');
                    const dropdown = menuItem.querySelector('.dropdown');
                    
                    if (dropdown && e.target === menuLink) {
                        e.preventDefault();
                        
                        // 關閉其他打開的子選單
                        menuItems.forEach(item => {
                            if (item !== menuItem) {
                                item.classList.remove('active');
                                const link = item.querySelector('.menu-link');
                                if (link.hasAttribute('aria-expanded')) {
                                    link.setAttribute('aria-expanded', 'false');
                                }
                            }
                        });

                        menuItem.classList.toggle('active');
                        const isExpanded = menuLink.getAttribute('aria-expanded') === 'true';
                        menuLink.setAttribute('aria-expanded', !isExpanded);
                    }
                }
            }

            // 添加事件監聽器
            mobileMenuBtn.addEventListener('click', toggleMenu);
            menuItems.forEach(item => {
                item.addEventListener('click', handleMenuItemClick);
            });

            // 處理鍵盤導航
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    // 關閉所有選單
                    menu.classList.remove('active');
                    mobileMenuBtn.classList.remove('active');
                    mobileMenuBtn.setAttribute('aria-expanded', 'false');
                    
                    menuItems.forEach(item => {
                        item.classList.remove('active');
                        const menuLink = item.querySelector('.menu-link');
                        if (menuLink.hasAttribute('aria-expanded')) {
                            menuLink.setAttribute('aria-expanded', 'false');
                        }
                    });
                }
            });

            // 處理點擊外部關閉選單
            document.addEventListener('click', function(e) {
                if (!nav.contains(e.target)) {
                    menu.classList.remove('active');
                    mobileMenuBtn.classList.remove('active');
                    mobileMenuBtn.setAttribute('aria-expanded', 'false');
                    
                    menuItems.forEach(item => {
                        item.classList.remove('active');
                        const menuLink = item.querySelector('.menu-link');
                        if (menuLink.hasAttribute('aria-expanded')) {
                            menuLink.setAttribute('aria-expanded', 'false');
                        }
                    });
                }
            });

            // 處理視窗大小改變
            window.addEventListener('resize', function() {
                if (window.innerWidth > 768) {
                    menu.classList.remove('active');
                    mobileMenuBtn.classList.remove('active');
                    mobileMenuBtn.setAttribute('aria-expanded', 'false');
                    
                    menuItems.forEach(item => {
                        item.classList.remove('active');
                        const menuLink = item.querySelector('.menu-link');
                        if (menuLink.hasAttribute('aria-expanded')) {
                            menuLink.setAttribute('aria-expanded', 'false');
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>
